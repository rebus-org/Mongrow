<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.1;net4.7.2;net6.0</TargetFrameworks>
		<LangVersion>12</LangVersion>
		<PackageIcon>mongrow.png</PackageIcon>
		<RepositoryUrl>https://github.com/rebus-org/mongrow</RepositoryUrl>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageReadmeFile>README.md</PackageReadmeFile>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\artwork\mongrow.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="mongodb.driver" Version="3.0.0" />
		<PackageReference Include="mongolianbarbecue" Version="3.0.2" />
	</ItemGroup>

</Project>
